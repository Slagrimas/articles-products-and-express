{{!-- PRODUCTS -- edit and delete --}} {{#with editProdItem}}
<form action="/products/{{id}}?_method=PUT" method="post">

  <label>Name:
    <textarea name="name" id="">{{name}}</textarea>
  </label>
  <label>Price $:
    <textarea name="price" id="">{{price}}</textarea>
  </label>
  <label>Inventory:
    <textarea name="inventory" id="">{{inventory}}</textarea>
  </label>
  <br>
  <br>
  <input class="submitBtn" type="submit" value="Submit"> {{/with}}
</form>


{{#with editProdItem}}
